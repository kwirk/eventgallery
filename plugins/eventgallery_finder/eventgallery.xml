<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="finder" method="upgrade">
	<name>PLG_EVENTGALLERY_FINDER</name>
	<author>Sven Bluege</author>
	<creationDate>August 2013</creationDate>	
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>svenbluege@gmail.com</authorEmail>
	<authorUrl>www.svenbluege.de</authorUrl>
	<version>3.0.0</version>
	<description>PLG_EVENTGALLERY_FINDER_DESC</description>
	<files>
		<folder>language</folder>
		<filename plugin="eventgallery">eventgallery.php</filename>
		<filename>index.html</filename>
	</files>
 	<config>
        <fields name="params">

                <fieldset name="basic">
                        <field name="search_limit" type="text"
                                default="50"
                                description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
                                label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
                                size="5"
                        />

                        <field name="search_content" type="radio"
                                default="0"
                                description="JFIELD_PLG_SEARCH_ALL_DESC"
                                label="JFIELD_PLG_SEARCH_ALL_LABEL"
                        >
                                <option value="0">JOFF</option>
                                <option value="1">JON</option>
                        </field>

                </fieldset>
        </fields>
    </config>
</extension>
