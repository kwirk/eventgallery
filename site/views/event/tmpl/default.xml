<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Event - Default List">
		<message>
			<![CDATA[EVENT LAYOUT]]>
		</message>
	</layout>
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request"
			addfieldpath="/administrator/components/com_eventgallery/models/fields">

			<field name="folder" type="modal_folder"
				label="Select folder"
				required="true"
				description="Select the folder to display."
			/>
		</fieldset>
	</fields>
	<fields name="params">
	
		<fieldset name="params" label="Event Layout">
			<field name="display_type" type="radio" default="0" label="event gallery type" description="which gallery type do you want to use">
				<option value="0">default (events, event, single image page)</option>
				<option value="1">Ajax paging</option>
				<option value="2">events, event page without paging</option>
			</field>
			<field 	name="image_array" 
				id="image_array" 
				type="textarea" 
				default="50x50 50x50 50x50" 
				label="Image Array for images on event page" 
				rows="6" 
				cols="50" 
				description="Bildgrößen: BreitexHöhe, Leerzeichen für gleiche Zeile, Zeilenumbruch für nächste Zeile" />
			<field name="page_width" id="page_width" type="text" default="600" label="Breite der Seite" />
			<field type="spacer" />
			<field type="spacer" />
			<field type="spacer" />
		</fieldset>
	</fields>
</metadata>